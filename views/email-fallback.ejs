<%- include('partials/header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Email Options</h4>
                </div>
                <div class="card-body">
                    <% if (messages.error) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>
                    <% } %>
                    
                    <% if (messages.info) { %>
                        <div class="alert alert-info">
                            <%= messages.info %>
                        </div>
                    <% } %>

                    <div class="mb-4">
                        <h5>Email Details:</h5>
                        <p><strong>To:</strong> <%= recipientEmail %></p>
                        <p><strong>Subject:</strong> <%= emailSubject %></p>
                    </div>

                    <div class="d-grid gap-3">
                        <a href="<%= mailtoLink %>" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>Open in Email Client
                        </a>
                        
                        <a href="/dashboard" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>

                    <div class="mt-4">
                        <div class="alert alert-warning">
                            <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Note:</h5>
                            <p class="mb-0">The Gmail integration is currently in testing mode. To use this feature, your Google account needs to be added as a test user. Please contact the administrator for access.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 